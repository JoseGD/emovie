<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="20dp"
        android:paddingEnd="20dp">

        <TextView
            android:id="@+id/tvAppTitle"
            style="@style/UILabel.Title"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/app_name"/>

        <TextView
            android:id="@+id/tvUpcoming"
            style="@style/UILabel.Section"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@id/tvAppTitle"
            app:layout_constraintStart_toStartOf="parent"
            android:text="@string/latest_movies"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvUpcomingMovies"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tvUpcoming"
            app:layout_constraintStart_toStartOf="parent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior" />

        <TextView
            android:id="@+id/tvTopRated"
            style="@style/UILabel.Section"
            app:layout_constraintTop_toBottomOf="@id/rvUpcomingMovies"
            app:layout_constraintStart_toStartOf="parent"
            android:text="@string/trending_movies"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvTopRatedMovies"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tvTopRated"
            app:layout_constraintStart_toStartOf="parent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior" />

        <TextView
            android:id="@+id/tvRecommended"
            style="@style/UILabel.Section"
            app:layout_constraintTop_toBottomOf="@id/rvTopRatedMovies"
            app:layout_constraintStart_toStartOf="parent"
            android:text="@string/recommended_movies"/>

        <TextView
            android:id="@+id/tvLanguageLabel"
            style="@style/UILabel.Filter"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/tvRecommended"
            app:layout_constraintStart_toStartOf="parent"
            android:text="@string/language"/>

        <TextView
            android:id="@+id/tvLaunchYearLabel"
            style="@style/UILabel.Filter"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toTopOf="@id/tvLanguageLabel"
            app:layout_constraintStart_toEndOf="@id/tvLanguageLabel"
            android:text="@string/launch_year"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>

<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="UILabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="UILabel.Title" parent="UILabel">
        <item name="android:textSize">24sp</item>
    </style>
    <style name="UILabel.Section" parent="UILabel">
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="UILabel.Filter" parent="UILabel">
        <item name="android:background">@drawable/bg_filter</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="PosterShape" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>
    <style name="UILabel.Detail" parent="UILabel">
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="UILabel.Detail.WhiteBG" parent="UILabel">
        <item name="android:padding">4dp</item>
        <item name="android:background">@drawable/bg_year_lang</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray</item>
    </style>
    <style name="UILabel.Detail.YellowBG" parent="UILabel.Detail.WhiteBG">
        <item name="android:background">@drawable/bg_vote_avg</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
